datasource db {
  provider = "postgresql" // or "sqlite"
  url      = env("DATABASE_URL")
}

generator client { provider = "prisma-client-js" }

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  entries   Entry[]
  favorites Favorite[]
  missions  Mission[]
}

model Entry {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  dt        DateTime
  name      String
  meal      String
  calories  Int
  protein   Int      @default(0)
  createdAt DateTime @default(now())
}

model Favorite {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  calories  Int
  protein   Int      @default(0)
  createdAt DateTime @default(now())
}

model Mission {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  label     String
  weekStart DateTime
  createdAt DateTime @default(now())
}
